Name: ubbd
Version: @VERSION@
Release: 1%{?dist}
Source: ubbd-%{version}.tar.gz
Summary: UBBD's Project Software
Group: Applications/System
License: LGPL
URL: https://github.com/ubbd/ubbd
BuildRequires: librbd-devel glibc-devel libnl3-devel
Requires: librbd libnl3

%description
UBBD's Project Software

%prep
%setup -q

%build
make

%install
DESTDIR=%{buildroot} make install

%pre

%post

%files
%defattr(-,root,root)
/usr/bin/ubbdadm
/usr/bin/ubbdd
/usr/bin/ubbd-backend

%clean
rm -rf %_env
